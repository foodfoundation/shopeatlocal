{{!-- reset-password.hbs
//    -------------------
//    Reset password view --}}

<div class="container w-lg-60 py-4">
	<h2 class="mb-3">{{t "common:password.resetTitle"}}</h2>

	<form id="form-main" class="pb-4" action="/reset-password/{{TokResetPass}}"
		method="POST" novalidate onsubmit="Disab_Form()">

		<input type="hidden" name="_csrf" value="{{TokCSRF}}">

		<div class="row">
			<div class="col-sm-6 form-group">
				<label for="PassNew">{{t "common:password.newPassword"}}</label>
				<input id="PassNew" name="PassNew" type="password" value="{{PassNew}}"
					minlength="12" maxlength="50" required
					class="form-control {{#if MsgFailPassNew}}is-invalid{{/if}}">
				{{hDivMsgFail MsgFailPassNew}}
				<p>
					<small>
						{{t "common:password.strongPasswordHint"}} <a
							href="https://www.howtogeek.com/195430/how-to-create-a-strong-password-and-remember-it/"
							tabindex="-1">
							{{t "common:password.strongPasswordLink"}}</a>!
					</small>
				</p>
			</div>
			<div class="col-sm-6 form-group">
				<div class="form-group">
					<label for="PassNewConfirm">{{t "common:password.confirmNewPassword"}}</label>
					<input id="PassNewConfirm" name="PassNewConfirm" type="password"
						value="{{PassNewConfirm}}" minlength="12" maxlength="50" required
						class="form-control {{#if MsgFailPassNewConfirm}}is-invalid{{/if}}">
					{{hDivMsgFail MsgFailPassNewConfirm}}
				</div>
			</div>
		</div>

		<hr class="mt-0">

		<div class="d-flex">
			<button type="submit" class="btn btn-primary ml-auto">{{t "common:buttons.save"}}</button>
		</div>
	</form>
</div>
