{{!-- pHeadDtlMemb.hbs
//    ----------------
//    Member detail heading --}}

<div class="d-none d-sm-block mr-3">
	<img src="{{hPrefixStatic 'memb.svg'}}" alt="" width="40" height="40">
</div>
<div>
	<div class="d-flex align-items-center">
		<span class="font-weight-semi">{{NameLogin}}</span>
		{{#if IsTrial}}
		<span class="badge badge-info ml-2">Trial</span>
		{{/if}}
	</div>
	{{>Misc/pIDsLine}}
</div>

{{!-- The heading is changed to 'block' display on narrow displays: --}}
<div class="ml-auto mt-2 mt-sm-0">
	{{!-- Hide the button if the user is viewing their own detail?: --}}
	<form id="FrmImperMemb{{IDMemb}}" action="/impersonate-member" method="POST"
		novalidate onsubmit="Disab_Form()">

		<input type="hidden" name="_csrf" value="{{@root.TokCSRF}}">

		<input type="hidden" name="IDMembImper" value="{{IDMemb}}">
		<input type="hidden" name="CkShowProducer" value="{{CkShowProducer}}">

		<button type="submit" class="btn btn-warning">Impersonate</button>
	</form>
</div>
