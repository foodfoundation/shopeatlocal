{{#if (gt Images.length 0)}}
    {{#if Modal}}
    <div id="modalCarousel{{IDProduct}}" class="carousel slide carousel-fade h-100"
        data-interval="false">
    {{else}}
    <div id="productCarousel{{IDProduct}}" class="carousel slide carousel-fade h-100"
        data-interval="false">
    {{/if}}
        <!-- Slides -->
        {{#if SearchGrid}}
        <div class="carousel-inner" data-target="#DlgDtlProduct{{IDProduct}}" data-toggle="modal">
        {{#each Images}}
            <div title="{{../NameProduct}} image {{add @index 1}}" class="carousel-item {{#if @first}}active{{/if}}" style="background-image:url({{hPrefixImageWithStorage this}}); background-size: cover; background-position: center;">
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="carousel-inner">
            {{#each Images}}
            <div title="{{../NameProduct}} image {{add @index 1}}" class="carousel-item {{#if @first}}active{{/if}}" style="background-image:url({{hPrefixImageWithStorage this}}); background-size: cover; background-position: center;">
            </div>
            {{/each}}
        </div>
        {{/if}}
        {{#if (gt Images.length 1)}}
          <a class="carousel-control-prev"
             role="button"
             href="#{{#if Modal}}modalCarousel{{else}}productCarousel{{/if}}{{IDProduct}}"
             data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next"
             role="button"
             href="#{{#if Modal}}modalCarousel{{else}}productCarousel{{/if}}{{IDProduct}}"
             data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        {{/if}}

    </div>

    {{else}}
    {{#if GridSearch}}
    <hr class="mx-0 mt-0 mb-2">
    	<div class="Descrip">{{Descrip}}</div>
    {{else}}
    <div class="col-md-4 mb-3">
        <p>No images available for this product.</p>
    </div>
    {{/if}}
{{/if}}

<!-- Carousel & image CSS overrides -->
<style>
	#productCarousel, #modalCarousel {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.carousel-indicators {
		position: static;
		margin: 8px 0 0;
	}

	.carousel-fade .carousel-item.active {
		transform: none !important;
		transition: opacity .5s ease-in-out !important;
	}

	.carousel-indicators li {
		width: 12px;
		height: 12px;
		margin: 0 6px;
		background-color: #000 !important;
		border-radius: 50%;
		opacity: 0.5;
	}

	.carousel-indicators .active {
		opacity: 1;
		background-color: #000 !important;
	}

	.carousel-item {
		height: 100%;
		width: 100%;
		object-fit: contain;
		transition: none !important;
		background-size: cover;
	}

	.carousel-inner {
		width: 100%;
		height: 100%;
	}

    .carousel-control-prev-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3E%3Cpath d='M2.5 0L1.09 1.41 3.67 4 1.09 6.59 2.5 8l4-4-4-4z' fill='black' stroke='white' stroke-width='0.5'/%3E%3C/svg%3E");
        transform: rotate(180deg);
    }

    .carousel-control-next-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3E%3Cpath d='M2.5 0L1.09 1.41 3.67 4 1.09 6.59 2.5 8l4-4-4-4z' fill='black' stroke='white' stroke-width='0.5'/%3E%3C/svg%3E");
    }
</style>
