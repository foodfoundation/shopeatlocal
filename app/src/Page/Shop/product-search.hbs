	      <div class="product-thumb">
	        <img src="{{ImageUrl}}" alt="{{Name}}" class="card-img-top">
	        {{#if IsFavorited}}
	          <img src="{{hPrefixStatic 'logo-carrot.svg'}}"
	               alt="Favorited" class="favorite-icon">
	        {{else}}
	          <img src="{{hPrefixStatic 'logo-carrot-negative.svg'}}"
	               alt="Not favorited" class="favorite-icon">
	        {{/if}}
	      </div>
	      <div class="card-body">
	        <h5 class="card-title">{{Name}}</h5>
	        <!-- etc. -->
	      </div>
	    </div>
	  </div>
	  {{/each}}
	</div> --}}
	{{!-- END inline override --}}

	<div class="d-flex flex-row mt-3 pl-1">
		{{#if CkPaging}}
		<div class="ml-auto">
			{{{hBtnPageSearch PathPagePrev "Previous"}}}
			{{{hBtnPageSearch PathPageNext "Next"}}}
		</div>
		{{/if}}
	</div>
</div>

