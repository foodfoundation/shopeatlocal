{{!-- This is an absolutely positioned component, so ensure the correct ancestor has a position of relative --}}
{{#if ShowButton}}
    {{#if IsFavorited}}
        <img src="{{hPrefixStatic 'logo-carrot.svg'}}" alt="Favorited" class="favorite-icon" data-product-id="{{IDProduct}}" data-other-src="{{hPrefixStatic 'logo-carrot-negative.svg'}}">
    {{else}}
        <img src="{{hPrefixStatic 'logo-carrot-negative.svg'}}" alt="Not favorited" class="favorite-icon" data-product-id="{{IDProduct}}" data-other-src="{{hPrefixStatic 'logo-carrot.svg'}}">
    {{/if}}
{{/if}}
