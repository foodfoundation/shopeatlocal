{{!-- distinguished-members.hbs
//    ------------------------
//    Distinguished members view --}}

<div class="container-md py-4">
	<h1 class="display-4 text-center mb-4">Distinguished members</h1>
	<p class="lead text-center mb-5">
		Meet the members who go above and beyond in supporting our community.
	</p>

	{{#if Sections}}
		{{#each Sections}}
		<section class="mb-5">
			<h2 class="font-size-250 text-primary text-center mb-4">{{heading}}</h2>
			<div class="row justify-content-center">
				<div class="col-lg-8">
					<ul class="list-group list-group-flush">
						{{#each members}}
						<li class="list-group-item">
							<span class="font-weight-semi">{{displayName}}</span>
						</li>
						{{/each}}
					</ul>
				</div>
			</div>
		</section>
		{{/each}}
	{{else}}
	<section class="text-center">
		<p class="lead">No distinguished members have been identified yet. Check back soon!</p>
	</section>
	{{/if}}
</div>
