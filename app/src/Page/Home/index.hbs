	{{>pProducersPickup}}
</div>

<div id="Banner" class="py-4 my-3">
	<div class="container">
		<div class="row align-items-center">
			<div class="d-none d-lg-block col-lg-2">
				<img src="{{CoopParams.HeroLogoPath}}" alt="" width="180">
