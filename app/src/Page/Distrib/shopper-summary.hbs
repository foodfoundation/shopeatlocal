{{!-- shopper-summary.hbs
//    -------------------
//    Shopper Summary view --}}

<div class="container py-4">
	<div class="d-md-flex flex-row justify-content-between align-items-baseline
		mb-2">
		<h2 class="mb-0">{{t "common:distrib.shopperSummaryTitle"}}</h2>
		<h5>{{hTextWhen (hNow) "FullMed" "HourMin"}}</h5>
	</div>

	<div class="d-print-none Flow-md-2">
		<p>
			{{t "common:distrib.shopperSummaryDescription"}}
		</p>
		<p>
			{{>Misc/pInstructPrint}}
		</p>
	</div>

	<hr class="d-print-none">

	<div class="mt-3">
		{{#each Locs}}
		<div class="d-flex flex-row align-items-center line-height-150 py-1 mt-4">
			<div class="d-none d-md-block">
				<img src="{{hPrefixStatic 'loc.svg'}}" alt="" width="40" height="40">
			</div>
			<div class="font-size-120 ml-md-2">
				<strong>{{CdLoc}}</strong><br>
				{{NameLoc}}
			</div>
			<div class="text-right font-weight-semi ml-auto px-0">
				{{Membs.length}} {{hPlural Membs.length "order"}}<br>
				{{QtyDeliv}} {{t "common:distrib.deliveredItems"}} {{hPlural QtyDeliv "item"}}
			</div>
		</div>

		<hr class="my-1">

		<div class="d-none d-md-block GridTbl Head">
			<div class="row font-weight-bold">
				<div class="col-md-4">{{t "common:distrib.shopper"}}</div>
				<div class="col-md-4">{{t "common:distrib.email"}}</div>
				<div class="col-md-2">{{t "common:distrib.phone"}}</div>
				<div class="col-md-1">{{t "common:distrib.ebtColumn"}}</div>
				<div class="col-md-1 text-md-right">{{t "common:distrib.total"}}</div>
			</div>
		</div>

		<div class="GridTbl Body mb-4">
			{{#each Membs}}
			<div class="Row">
				<div class="row">
					<div class="col-md-4">
						<a href="/member-detail/{{IDMemb}}">
							{{hTextIDMemb IDMemb}} {{Name1First}} {{Name1Last}}
						</a>
					</div>
					<div class="col-md-4">
						{{hLinkEmail Email1}}
					</div>
					<div class="col-md-2">
						{{hLinkPhone Phone1}}
					</div>
					<div class="col col-md-1">
						{{!-- In the mobile layout, the 'EBT' label stands out more if we
						//    reverse these: --}}
						<span class="d-md-none">
							{{hTextCurrOrOrig Cart.Ttl}}
						</span>
						<span class="d-none d-md-block">
							{{hYesNoBlank (hCkRegEBT this)}}
						</span>
					</div>
					<div class="col col-md-1 text-right">
						<span class="d-md-none">
							{{#if (hCkRegEBT this)}}{{t "common:distrib.ebtColumn"}}{{else}}{{t "common:distrib.noEbt"}}{{/if}}
						</span>
						<span class="d-none d-md-block">
							{{hTextCurrOrOrig Cart.Ttl}}
						</span>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
		{{/each}}
	</div>
</div>
