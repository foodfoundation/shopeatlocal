{{!-- producer-admin.hbs
//    ------------------
//    Producer Admin view --}}

<div class="container-lg pt-4 pb-2">
	<div class="row">
		<div class="col-md">
			<h5 class="mb-3">{{t "common:admin.producerStats"}}</h5>

			<div>
				<a class="LinkLblPg" href="/producer-search-results?CkPendProducer=true">
					{{t "common:admin.pendingProducerRegistration"}}
				</a>
				&times; <span class="LblPg">{{CtProducerPend}}</span>
			</div>

			<div>
				<a class="LinkLblPg" href="/producer-search-results?CkList=true">
					{{t "common:admin.listed"}}
				</a>
				&times; <span class="LblPg">{{CtProducerList}}</span>
			</div>

			<div>
				<a class="LinkLblPg" href="/producer-search-results?CkWithSale=true">
					{{t "common:admin.withSalesThisCycle"}}
				</a>
				&times; <span class="LblPg">{{CtProducerWithSale}}</span>
			</div>

			<div>
				<a class="LinkLblPg" href="/producer-search-results?CkIsWholesale=true">
					{{t "common:admin.wholesale"}}
				</a>
				&times; <span class="LblPg">{{CtProducerIsWholesale}}</span>
			</div>

			<h5 class="my-3">{{t "common:admin.productStats"}}</h5>

			<div>
				<a class="LinkLblPg" href="/edited-products">
					{{t "common:admin.edited"}}
				</a>
				&times; <span class="LblPg">{{CtProductEdit}}</span>
			</div>

			{{!-- <div class="LinksPg">
				<a href="/edited-products">Edited Products</a>
			</div> --}}

			<hr class="d-block d-md-none">
		</div>

		<div class="col-md">
			<h3 class="mb-3">{{t "common:admin.producerSearch"}}</h3>

			<form id="form-main" class="pb-4" action="/producer-admin" method="POST"
				autocomplete="off" onsubmit="Disab_Form()">

				<input type="hidden" name="_csrf" value="{{TokCSRF}}">

				<div class="form-row">
					<div class="form-group col-md-4">
						<label for="IDProducer">{{t "common:admin.producerId"}}</label>
						<input id="IDProducer" name="IDProducer" value="{{IDProducer}}"
							class="form-control">
					</div>
					<div class="form-group offset-md-4 col-md-4">
						<label for="CdProducer">{{t "common:admin.producerCode"}}</label>
						<input id="CdProducer" name="CdProducer" value="{{CdProducer}}"
							class="form-control">
					</div>
				</div>

				<div class="form-row">
					<div class="form-group col-md">
						<label for="NameBus">{{t "common:admin.businessName"}}</label>
						<input id="NameBus" name="NameBus" value="{{NameBus}}"
							class="form-control">
					</div>
				</div>

				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="NameFirst">{{t "common:admin.memberFirstName"}}</label>
						<input id="NameFirst" name="NameFirst" value="{{NameFirst}}"
							class="form-control">
					</div>
					<div class="form-group col-md-6">
						<label for="NameLast">{{t "common:admin.memberLastName"}}</label>
						<input id="NameLast" name="NameLast" value="{{NameLast}}"
							class="form-control">
					</div>
				</div>

				<p class="text-muted font-size-90">
					{{t "common:admin.producerSearchHintAny"}}
				</p>

				<div class="form-row align-items-end">
					<div class="form-group col-md-12">
						<div class="custom-control custom-checkbox mb-2">
							<input id="CkList" name="CkList" type="checkbox"
								{{hAttrCk CkList false}} class="custom-control-input">
							<label for="CkList" class="custom-control-label">
								{{t "common:admin.listedQ"}}
							</label>
						</div>

						<div class="custom-control custom-checkbox">
							<input id="CkWithSale" name="CkWithSale" type="checkbox"
								{{hAttrCk CkWithSale false}} class="custom-control-input">
							<label for="CkWithSale" class="custom-control-label">
								{{t "common:admin.withSalesThisCycleQ"}}
							</label>
						</div>
					</div>
				</div>

				<p class="text-muted font-size-90">
					{{t "common:admin.producerSearchHintAll"}}
				</p>

				<button type="submit" class="btn btn-primary mt-2">{{t "common:buttons.search"}}</button>
			</form>
		</div>
	</div>
</div>
