{
  "name": "shopeatlocal",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:app": "turbo run app#dev",
    "dev:app:sanity": "turbo run app#dev sanity#dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "lint:fix": "turbo lint -- --fix"
  },
  "devDependencies": {
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "app",
    "eslint-config",
    "producers-report",
    "sanity"
  ],
  "packageManager": "npm@11.3.0"
}
